extends layout

block content

  .container-fluid
  
    .row
      .col-xs-10.col-xs-offset-1
        h1
          =title
          
    .row
      .col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
        .list-group
          each list in lists
            a.list-group-item(href='/lists/'+list.id)
              h4.list-group-item-heading
                =list.name
              p.list-group-item-text
                | #{list.dataValues.placeCount} places around #{list.location}
